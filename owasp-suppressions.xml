    <!-- Suppress logback vulnerability - false positive for our use case -->
    <suppress>
        <notes><![CDATA[
        CVE-2021-42550: Only affects JNDI lookup which we don't use
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/ch\.qos\.logback/logback\-.*@.*$</packageUrl>
        <cve>CVE-2021-42550</cve>
    </suppress>
